{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
<div class="container-sm">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Games</h1>
        <a class="btn btn-primary" href="{{ path('game_new') }}">Create New</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <th scope="row">{{game.id}}</th>
                <td>{{game.name}}</td>
                <td><a href="{{ path('game_edit', {id: game.id}) }}">Bewerken</a></td>
                <td><a href="{{ path('game_delete', {id: game.id}) }}">Verwijderen</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
</div>
{% endblock %}
