{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Dashboard</h1>
        <a class="dropdown-toggle btn btn-primary" href="{{ path('dashboard', {game: selectedGame.id}) }}" id="dropdownMenuButton" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{selectedGame.name}}
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        {% for game in games %}
            <li><a class="dropdown-item" href="{{ path('dashboard', {game: game.id}) }}">{{game.name}}</a></li>
        {% endfor %}
        </ul>
    </div>
    
    <div class="d-flex justify-content-around align-content-start flex-wrap">
        {% for chart in charts %}
            <div class="card m-2" style="width: 700px;">
                {{ render_chart(chart) }}
            </div>
        {% endfor%}
    </div>
</div>
{% endblock %}
